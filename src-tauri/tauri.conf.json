{
  "productName": "craftmatch",
  "version": "0.0.1",
  "identifier": "xyz.szeweq.craftmatch",
  "build": {
    "beforeDevCommand": "node --run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Craftmatch",
        "width": 800,
        "height": 600,
        "minWidth": 300,
        "minHeight": 200
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' raw: http://raw.localhost",
        "img-src": "'self' raw: http://raw.localhost"
      }
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
